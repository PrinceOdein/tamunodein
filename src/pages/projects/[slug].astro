---
import { getCollection, type CollectionEntry } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";

type Project = CollectionEntry<"projects">;

export async function getStaticPaths() {
  const projects = await getCollection("projects");

  return projects.map((project: Project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props as { project: Project };
const { data } = project;
---
<BaseLayout title={`${data.title} | Tamunodein(PrinceOdein)`} description={data.description}>
  <article class="max-w-3xl mx-auto px-6 py-24">
    <h1 class="text-4xl font-bold">{data.title}</h1>
    <p class="text-zinc-400 mt-4">{data.description}</p>

    <div class="flex flex-wrap gap-2 mt-6">
      {data.techStack.map((tech: string) => (
        <span class="text-sm bg-zinc-800 px-2 py-1 rounded">{tech}</span>
      ))}
    </div>

    <div class="prose prose-invert mt-12">
      <slot />
    </div>
  </article>
</BaseLayout>
